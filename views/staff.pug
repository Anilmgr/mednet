html
  head
    title MedNet
    link(rel='stylesheet', href='/style.css')
  body
    div(class='form-div')
      span(class="res-msg") #{success}
      form(method='post' action='/u/add-staff')

        label Staff Name:
        input(type='text' placeholder='Name' name='staff_name') 
            
        label Staff Address:
        input(type='text' placeholder='Address' name='staff_address')  
        
        label Email :
        input(type='email' placeholder='Email' name='staff_email') 

        label Password :
        input(type='password' placeholder='Password' name='staff_password')

        input(type='submit' value='submit')
    br
    a(href='/u/admin/' class='back-btn') Go Back